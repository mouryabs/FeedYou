<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ListPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NGO page"
        android:id="@+id/tvll"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Pickup"
        android:id="@+id/btconf"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvll"
        android:layout_alignEnd="@+id/tvll"
        android:layout_marginBottom="42dp"
        android:layout_alignLeft="@+id/tvll"
        android:layout_alignStart="@+id/tvll" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/tvll"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"

        android:layout_alignParentStart="true" />



</RelativeLayout>
